{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ],

  "strict": true,                   
  "noImplicitAny": true,            
  "strictNullChecks": true,         
  "strictFunctionTypes": true,      
  "noImplicitThis": true,           
  "alwaysStrict": true,   
}
